  prune = true
[pull]
  rebase = true
[push]
  autoSetupRemote = true
[rebase]
  autoStash = false
  autosquash = true
  updateRefs = true
[init]
  defaultBranch = main
[include]
  path = ~/.config/git/config.local
[rerere]
  enabled = true
[core]
  pager = delta
  excludesfile = /Users/ivar/.gitignore_global
	autocrlf = input
[interactive]
  diffFilter = delta --color-only
[include]
  path = /Users/ivar/.config/catppuccin.gitconfig

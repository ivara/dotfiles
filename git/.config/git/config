  features = catppuccin-frappe
  navigate = true
  dark = true
  line-numbers = true
  side-by-side = true
  word-diff = true
  hunk-header-style = file line-number syntax
[delta "no-side-by-side"]
  side-by-side = false
[merge]
  conflictstyle = zdiff3
[gc]
  refLogExpire = 90.days
